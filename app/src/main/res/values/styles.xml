<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/royalblue</item>
    </style>

    <style name="AppTheme.TranslucentNoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--夜间模式主题-->
    <style name="DayTheme" parent="AppTheme.NoActionBar">
        <item name="backgroundColor">@color/white</item>
        <item name="layoutBackground">@color/lightgray</item>
        <item name="textColor">@color/black</item>
    </style>
    <style name="NightTheme" parent="AppTheme.NoActionBar">
        <item name="backgroundColor">@color/black</item>
        <item name="layoutBackground">@color/black</item>
        <item name="textColor">@color/white</item>
    </style>
</resources>
